@model IEnumerable<PlanetaApp.Models.ACTIVIDAD>


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Gestion proyecto
        <small>Actividad lista</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i> Gestion proyecto</a></li>
        <li class="active">Actividad lista</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">

    <div class="col-lg-12 col-md-12 col-sm-12 com-xs-12">

        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Lista proyectos</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">

                <div class="text-center col-lg-12 col-md-12 col-sm-12 com-xs-12">
                    <a class="aceptar btn Crear btn-warning" href="#" data-ancho="modalNormal" title="AGREGAR ACTIVIDAD" role="button" id="~/Actividad/Create">
                        <i class="fa fa-folder-open-o fa-lg"></i>&ensp;Agregar actividad
                    </a>
                </div>
                <br />
                <br />
                <br />
                <div class="text-center col-lg-12 col-md-12 col-sm-12 com-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered data-table" id="tblActividad">
                            <thead>
                                <tr class="text-center">
                                    <th>#</th>
                                    <th>NOMBRE</th>
                                    <th>PRESUPUESTO</th>
                                    <th>FECHA INICIAL</th>
                                    <th>FECHA FINAL</th>
                                    <th>ESTADO</th>
                                    <th>OPTIONS </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int cont = 1; }
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>
                                            @cont
                                        </td>
                                        <td class="text-center">
                                            @item.NOMBRE
                                        </td>
                                        <td class="text-center">
                                            @item.PRESUPUESTO
                                        </td>
                                        <td class="text-center">
                                            @item.FECHA_INICIAL
                                        </td>
                                        <td class="text-center">
                                            @item.FECHA_FINAL
                                        </td>
                                        <td class="text-center">

                                            @switch (item.ESTADO)
                                            {
                                                case 0:
                                                    <span>INACTIVO</span>
                                                    break;
                                                case 1:
                                                    <span>ACTIVO</span>
                                                    break;
                                                <span>COMPLETADO</span>
                                                case 2:
                                                    break;
                                            }
                                        </td>


                                        <td>

                                            <div class="btn-group dropup">

                                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                                    <span class="glyphicon glyphicon-cog" title="Toggle dropdown menu"></span>
                                                </a>
                                                <ul class="dropdown-menu" style="background-color:white;text-align:justify;font-size: 11.5px;">
                                                    <li>

                                                        <a class="Detalles" title="VER ACTIVIDAD" data-ancho="modalEnorme" role="button" id="~/Actividad/Details/@item.IDACTIVIDAD">
                                                            <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i>&ensp;Ver
                                                        </a>
                                                        <a class="Editar" title="EDITAR ACTIVIDAD" data-ancho="modalNormal" role="button" id="~/Actividad/Edit/@item.IDACTIVIDAD">
                                                            <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i>&ensp;Editar
                                                        </a>

                                                    </li>
                                                </ul>
                                            </div>

                                        </td>

                                    </tr>
                                    cont++;
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>



</section>
<!-- /.content -->
