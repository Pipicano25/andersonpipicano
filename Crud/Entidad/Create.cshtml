@model MensajeriaTexto.Models.ENTIDAD
@{Layout = null; }
@using (Ajax.BeginForm("Create", "ENTIDADs", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Exito", OnSuccess = "ajaxSuccessEntidad", OnBegin = "ajaxBeforeSend" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4>ENTIDAD</h4>
    <hr />
    <table style="width:100%">
        <tr>
            <td align="right">
                <label class="control-label">RAZON SOCIAL</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                @Html.EditorFor(model => model.RAZONSOCIAL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RAZONSOCIAL, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">NIT</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                @Html.EditorFor(model => model.NIT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NIT, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">DIRECCION</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                @Html.EditorFor(model => model.DIRECCION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIRECCION, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">TELEFONO</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                @Html.EditorFor(model => model.TELEFONO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TELEFONO, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">CORREO ELECTRONICO</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                @Html.EditorFor(model => model.CORREOELECTRONICO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CORREOELECTRONICO, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">VALOR MEMBRESIA</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                <input class="form-control" name="Membresia" value="120000" />
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">MENSAJES DE PRUEBA</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
                <input class="form-control" name="Mensajes" value="100" />
            </td>
        </tr>
        <tr>
            <td align="right">
                <label class="control-label">TIEMPO AL AIRE</label><label>:&ensp;&ensp;</label>
            </td>
            <td>
  
                <input type="number" value="10" name="TIEMPO" min="10" class="form-control">
            </td>
        </tr>
        <tr>
            <td align="right">
                <label>COLOR:&ensp;&ensp;</label>
            </td>
            <td>
                <input type="color" value="" name="CODIGOCOLOR">
            </td>
        </tr>

        <tr>
            <td align="right">
                <label>COLOR LETRA:&ensp;&ensp;</label>
            </td>
            <td>
                <input type="color" value="" name="CODIGOCOLORLETRA">
            </td>
        </tr>

        <tr>
            <td align="right">
                @Html.LabelFor(model => model.ESTADO, htmlAttributes: new { @class = "control-label" })<label>:&ensp;&ensp;</label>
            </td>
            <td>
                <select class="form-control" name="ESTADO">
                    <option value="1">Activo</option>
                    <option value="0">Inactivo</option>
                </select>
            </td>
        </tr>
    </table>    
    <input type="submit" value="Guardar" id="Crearbtn" style="display:none" class="btn aceptar" />
}

