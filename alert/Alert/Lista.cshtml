@model IEnumerable<sigapsWeb.Models.VsAnimalesDomestico>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sig APS
            <small>Gestion Animal</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/home/index"><i class="fa fa-dashboard"></i> Sig APS</a></li>
            <li class="active">Gestion Alertas</li>
        </ol>
    </section>
            
    <!-- Main content -->
    <section class="content">

        <div class="col-lg-12 col-md-12 col-sm-12 com-xs-12">

            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Gestion Animal</h3>
                    <div class="box-tools pull-right">
                        <button class="Crear btn btn-primary" id="/alert/create" data-ancho="modalPequeno" title="CREAR EMPRESA">
                        Crear empresa
                    </button>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="text-center col-lg-12 col-md-12 col-sm-12 com-xs-12">
                        <div class="table-responsive">
                            <table class="table table-bordered data-table" id="tblalert">
                                <thead>
                                    <tr class="text-center">
                                        <th>INTEGRANTE</th>
                                        <th>MUNICIPIO</th>
                                        <th>FECHA SEGUIMIENTO</th>
                                        <th id="thi">ALERTA</th>
                                        <th>PLAN</th>
                                        <th>ESTADO</th>
                                        <th>FECHA INTERVENCION</th>
                                        <th>DESCRIPCION</th>
                                        <th>OPCIONES</th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </section>
    <!-- /.content -->

    <script type="text/javascript">

        var celda = document.getElementById("thi");
        celda.style.width = "210rem";

        PaginationDataTable({

            tableId: "tblalert", 
            url:"datajson", 
            pageLength: 10,
            columns:[
                    { "data": "idIntegrante" },
                    { "data": "idMunicipio" },
                    { "data": "fechaSeguimiento" },
                    { "data": "alerta" },
                    { "data": "plan" },
                    { "data": "estado" },
                    { "data": "fechaIntervencion" },
                    { "data": "desIntervencion" },
                    {"data": "id", "render": function (id) {
                            
                            return "<div class='btn-group dropup'> "
                                    +" <a class='btn btn-default dropdown-toggle' data-toggle='dropdown'> "
                                    +" <span class='glyphicon glyphicon-cog' title='Toggle dropdown menu'></span>  	</a>  	"
                                    +"<ul class='dropdown-menu' style='background-color:white;text-align:justify;font-size: 11.5px;'> <li>"
                                    +" <a class='Adicional' title='VER ALERTA GENERADA' data-ancho='modalEnorme' role='button' "
                                    +"id='/alert/details/"+ id +"'> "
                                    +"  <i class='glyphicon glyphicon-eye-open' aria-hidden='true'></i>  &ensp; Ver </a> </li> <li>"
                                    +"  <a class='Editar' title='EDITAR ALERTA GENERADA' data-ancho='modalEnorme' role='button' id='/alert/edit/"+ id +"'>"
                                    +"   <i class='glyphicon glyphicon-eye-open' aria-hidden='true'></i>  &ensp; Editar </a> </li> <li>"
                                    +" <a class='Eliminar' title='ELIMINAR EMPRESA' data-ancho='modalEnorme' role='button' "
                                    +" value='Eliminarbtn'  class='btn eliminar' id='/alert/delete/"+ id +"' > "
                                    +"  <i class='glyphicon glyphicon-eye-open' aria-hidden='true'></i>  &ensp; Eliminar </a> </li>  </ul>  </div>"
                            
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
 
                ]});
    </script>
